

<div class="card">
  <div class="card-header">
    <h1>Branch</h1>
    <%= link_to "Delete", branch, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <div class="card-body">
    <%= render @branch %>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_branch_path(@branch), class: "btn btn-secondary btn-sm" %> |
    <%= link_to "Back", branches_path, class: "btn btn-secondary btn-sm" %>
  </div>

</div>