<%= content_tag :h1, "List of Claim Causes" %>


<div class="text-end mb-3">
  <%= link_to new_claim_cause_path, class: 'btn btn-primary' do %>
    New Claim Cause
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Acd</th>
        <th>Ucd</th>
        <th>Osccd</th>
        <th>Process Claim</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @claim_causes.each do |claim_cause| %>
        <tr>

        <th scope="row"><%= claim_cause.id %></th>
        <td><%= claim_cause.acd %></td>
        <td><%= claim_cause.ucd %></td>
        <td><%= claim_cause.osccd %></td>
        <td><%= claim_cause.process_claim %></td>
    
          <td>
            <%= link_to 'View', claim_cause, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_claim_cause_path(claim_cause), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", claim_cause, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
