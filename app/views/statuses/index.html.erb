<%= content_tag :h1, "List of Statuses" %>


<div class="text-end mb-3">
  <%= link_to new_status_path, class: 'btn btn-primary' do %>
    New Status
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @statuses.each do |status| %>
        <tr>

        <th scope="row"><%= status.id %></th>
        <td><%= status.name %></td>
        <td><%= status.description %></td>
    
          <td>
            <%= link_to 'View', status, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_status_path(status), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", status, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
