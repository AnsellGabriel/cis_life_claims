<%= content_tag :h1, "List of Claim Coverages" %>


<div class="text-end mb-3">
  <%= link_to new_claim_coverage_path, class: 'btn btn-primary' do %>
    New Claim Coverage
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Orno</th>
        <th>Or Date</th>
        <th>Bsno</th>
        <th>Bs Date</th>
        <th>Effectivity</th>
        <th>Expiry</th>
        <th>Amount</th>
        <th>Coverage Type</th>
        <th>Status</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @claim_coverages.each do |claim_coverage| %>
        <tr>

        <th scope="row"><%= claim_coverage.id %></th>
        <td><%= claim_coverage.orno %></td>
        <td><%= claim_coverage.or_date %></td>
        <td><%= claim_coverage.bsno %></td>
        <td><%= claim_coverage.bs_date %></td>
        <td><%= claim_coverage.effectivity %></td>
        <td><%= claim_coverage.expiry %></td>
        <td><%= claim_coverage.amount %></td>
        <td><%= claim_coverage.coverage_type %></td>
        <td><%= claim_coverage.status %></td>
    
          <td>
            <%= link_to 'View', claim_coverage, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_claim_coverage_path(claim_coverage), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", claim_coverage, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
