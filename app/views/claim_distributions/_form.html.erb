
<%= simple_form_for(@claim_distribution, url: url, method: meth) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount_type, collection: ClaimDistribution::AmountType %>
    <%= f.input :amount %>
  </div>
  <br>
  <div class="form-actions text-end">
    <%= link_to "Back", @process_claim, class: "btn btn-secondary" %>
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
