<table class="table table-borderless table-hover">
  <thead>
    <tr class="border-top border-bottom border-primary">
      <th class="text-primary">#</th>
      <th class="text-primary">Name</th>
      <th class="text-end text-primary">Amount</th>
      <th class="text-primary"></th>
    </tr>
  </thead>
  <tbody>
    <% @process_claim.claim_distributions.each do |claim_distribution| %>
      <tr>
        <th scope="row"><%= claim_distribution.id %></th>
        <td><%= claim_distribution.name %></td>
        <td class="text-end"><span class="badge bg-warning text-dark"><%= claim_distribution.amount_type %></span> <%= to_curr(claim_distribution.amount)  %></td>
        <td class="text-end">
          <% if params[:action] == 'show' %>
            <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_claim_distribution_path(claim_distribution), class: 'btn btn-outline-primary btn-sm', data: { turbo_frame: "remote_modal" } %>
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, claim_distribution, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
