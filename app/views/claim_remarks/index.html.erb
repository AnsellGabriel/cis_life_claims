<%= content_tag :h1, "List of Claim Remarks" %>


<div class="text-end mb-3">
  <%= link_to new_claim_remark_path, class: 'btn btn-primary' do %>
    New Claim Remark
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Process Claim</th>
        <th>User</th>
        <th>Status</th>
        <th>Remarks</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @claim_remarks.each do |claim_remark| %>
        <tr>

        <th scope="row"><%= claim_remark.id %></th>
        <td><%= claim_remark.process_claim %></td>
        <td><%= claim_remark.user %></td>
        <td><%= claim_remark.status %></td>
        <td><%= claim_remark.remarks %></td>
    
          <td>
            <%= link_to 'View', claim_remark, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_claim_remark_path(claim_remark), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", claim_remark, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
